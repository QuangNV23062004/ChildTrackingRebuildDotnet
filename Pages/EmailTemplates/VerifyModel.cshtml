@model string
@{
    // Assuming the full verification URL (with token) is passed as the model
    var verificationUrl = Model ?? ViewData["VerificationUrl"]?.ToString();
}

<!DOCTYPE html>
<html>

<head>
    <title>Email Verification - GrowthGuardian</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #f8fafc;
            color: #334155;
            line-height: 1.6;
            padding: 20px;
        }

        .container {
            max-width: 480px;
            margin: 40px auto;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            color: white;
            padding: 32px 24px;
            text-align: center;
        }

        .header h1 {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .header p {
            opacity: 0.9;
            font-size: 14px;
        }

        .content {
            padding: 32px 24px;
            text-align: center;
        }

        .content h2 {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 16px;
            color: #1e293b;
        }

        .content p {
            font-size: 16px;
            margin-bottom: 32px;
            color: #64748b;
        }

        .verification-button {
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            color: white;
            padding: 14px 32px;
            border-radius: 8px;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            font-weight: 500;
            transition: all 0.2s ease;
            box-shadow: 0 2px 4px rgba(59, 130, 246, 0.3);
        }

        .verification-button:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(59, 130, 246, 0.4);
        }

        .footer {
            padding: 24px;
            background-color: #f8fafc;
            text-align: center;
            border-top: 1px solid #e2e8f0;
        }

        .footer p {
            font-size: 12px;
            color: #94a3b8;
        }

        .security-note {
            margin-top: 24px;
            padding: 16px;
            background-color: #f1f5f9;
            border-radius: 8px;
            font-size: 14px;
            color: #64748b;
        }

        @@media (max-width: 480px) {
            .container {
                margin: 20px auto;
                border-radius: 8px;
            }

            .header,
            .content {
                padding: 24px 20px;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>GrowthGuardian</h1>
            <p>Verify your email address</p>
        </div>

        <div class="content">
            <h2>Almost there!</h2>
            <p>Click the button below to verify your email address and complete your account setup.</p>

            <a href="@verificationUrl" class="verification-button">
                Verify Email Address
            </a>

            <div class="security-note">
                <p>This link will expire in 24 hours for security reasons. If you didn't create an account with
                    GrowthGuardian, please ignore this email.</p>
            </div>
        </div>

        <div class="footer">
            <p>&copy; 2025 GrowthGuardian. All rights reserved.</p>
        </div>
    </div>
</body>

</html>