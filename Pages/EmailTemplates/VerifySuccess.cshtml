@{
    ViewData["Title"] = "Email Verified Successfully"; Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Email Verified - GrowthGuardian</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #f8fafc;
            color: #334155;
            line-height: 1.6;
            padding: 20px;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            max-width: 480px;
            width: 100%;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            text-align: center;
        }

        .header {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
            padding: 32px 24px;
        }

        .success-icon {
            width: 64px;
            height: 64px;
            margin: 0 auto 16px;
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
        }

        .header h1 {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .header p {
            opacity: 0.9;
            font-size: 16px;
        }

        .content {
            padding: 32px 24px;
        }

        .content h2 {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 16px;
            color: #1e293b;
        }

        .content p {
            font-size: 16px;
            margin-bottom: 24px;
            color: #64748b;
        }

        .close-instruction {
            padding: 20px;
            background-color: #f0fdf4;
            border: 1px solid #bbf7d0;
            border-radius: 8px;
            margin-bottom: 24px;
        }

        .close-instruction p {
            color: #166534;
            font-size: 14px;
            margin: 0;
        }

        .auto-close {
            font-size: 12px;
            color: #94a3b8;
            font-style: italic;
        }

        .footer {
            padding: 24px;
            background-color: #f8fafc;
            border-top: 1px solid #e2e8f0;
        }

        .footer p {
            font-size: 12px;
            color: #94a3b8;
        }

        @@media (max-width: 480px) {
            .container {
                border-radius: 8px;
            }

            .header,
            .content {
                padding: 24px 20px;
            }
        }

        .fade-out {
            animation: fadeOut 1s ease-in-out 8s forwards;
        }

        @@keyframes fadeOut {
            from {
                opacity: 1;
            }

            to {
                opacity: 0.3;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <div class="success-icon">âœ“</div>
            <h1>Email Verified!</h1>
            <p>Your account is now active</p>
        </div>

        <div class="content">
            <h2>Welcome to GrowthGuardian</h2>
            <p>Your email address has been successfully verified. You can now enjoy all the features of your account.
            </p>

            <div class="close-instruction">
                <p><strong>You can safely close this page now.</strong></p>
            </div>

            <p class="auto-close">This page will automatically close in 30 seconds.</p>
        </div>

        <div class="footer">
            <p>&copy; 2025 GrowthGuardian. All rights reserved.</p>
        </div>
    </div>

    <script>
        // Add fade-out class after 8 seconds
        setTimeout(() => {
            document.querySelector('.container').classList.add('fade-out');
        }, 8000);

        // Optional: Auto-close after 15 seconds if running in a popup/tab
        setTimeout(() => {
            if (window.opener || window.history.length === 1) {
                window.close();
            }
        }, 30000);
    </script>
</body>

</html>